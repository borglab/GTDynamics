<robot name="climb_robot">

  <link name="body" >
  <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <link name="left_upperarm">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="right_upperarm" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="right_thigh" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="left_thigh" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="left_forearm" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="right_forearm" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="right_leg" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="left_leg" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.3 0.1"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="left_hand" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="right_hand" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="right_foot" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="left_foot" >
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <!-- Joints -->

  <joint name="left_shoulder" type="continuous">
    <parent link="body"/>
    <child link="left_upperarm"/>
    <origin xyz="-0.15 0.15 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_shoulder" type="continuous">
    <parent link="body"/>
    <child link="right_upperarm"/>
    <origin xyz="0.15 0.15 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_hip" type="continuous">
    <parent link="body"/>
    <child link="right_thigh"/>
    <origin xyz="0.15 -0.15 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="left_hip" type="continuous">
    <parent link="body"/>
    <child link="left_thigh"/>
    <origin xyz="-0.15 -0.15 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="left_elbow" type="continuous">
    <parent link="left_upperarm"/>
    <child link="left_forearm"/>
    <origin xyz="0.0 0.3 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_elbow" type="continuous">
    <parent link="right_upperarm"/>
    <child link="right_forearm"/>
    <origin xyz="0.0 0.3 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_knee" type="continuous">
    <parent link="right_thigh"/>
    <child link="right_leg"/>
    <origin xyz="0.0 -0.3 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="left_knee" type="continuous">
    <parent link="left_thigh"/>
    <child link="left_leg"/>
    <origin xyz="0.0 -0.3 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="left_wrist" type="continuous">
    <parent link="left_forearm"/>
    <child link="left_hand"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wrist" type="continuous">
    <parent link="right_forearm"/>
    <child link="right_hand"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_ankle" type="continuous">
    <parent link="right_leg"/>
    <child link="right_foot"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="left_ankle" type="continuous">
    <parent link="left_leg"/>
    <child link="left_foot"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
</robot>